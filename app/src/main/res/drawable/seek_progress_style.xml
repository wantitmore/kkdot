<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#48474F" />
            <size android:height="1dp" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <solid android:color="#48474F"/>
                <size android:height="1dp" />
                <corners android:radius="5dp" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#00CAFF"/>
                <size android:height="1dp" />
                <corners android:radius="5dp" />
            </shape>
        </clip>
    </item>

<!-- 背景图 
    <item android:id="@+android:id/background" android:drawable="@drawable/com_progressbar_default2" />  -->  
    
    <!-- 进和能量图 
    <item android:id="@+android:id/progress" android:drawable="@drawable/com_progressbar_arrived_s2" />  -->  
